{% assign ancho = section.settings.ancho | default: 'completo' %}
{% assign alineacion = section.settings.alineacion_texto | default: 'center' %}
{% assign mostrar_borde = section.settings.mostrar_borde %}
<div
  class='contenedorTitulo contenedorTitulo--{{ ancho }}'
  {% if section.settings.anchor_seccion != blank %}
    id='{{ section.settings.anchor_seccion }}'
  {% endif %}
>
  <div class='textoTitulo {% if mostrar_borde %}textoTitulo--conBorde{% endif %}' style='text-align: {{ alineacion }};'>
    {{ section.settings.titulo_seccion }}
  </div>
</div>

{% schema %}
{
  "name": "Título",
  "settings": [
    {
      "type": "text",
      "id": "anchor_seccion",
      "label": "ID de ancla (opcional)",
      "info": "Define un ID para esta sección (ej: jewelry, prints). Permite navegación directa desde el menú de íconos.",
      "placeholder": "jewelry"
    },
    {
      "type": "richtext",
      "id": "titulo_seccion",
      "label": "Título"
    },
    {
      "type": "select",
      "id": "ancho",
      "label": "Ancho sección",
      "options": [
        { "value": "completo", "label": "Completo (1)" },
        { "value": "mitad", "label": "Mitad (1/2)" },
        { "value": "tercio", "label": "Tercio (1/3)" },
        { "value": "dos-tercios", "label": "Dos tercios (2/3)" },
        { "value": "cuarto", "label": "Cuarto (1/4)" },
        { "value": "tres-cuartos", "label": "Tres cuartos (3/4)" },
        { "value": "quinto", "label": "Quinto (1/5)" },
        { "value": "dos-quintos", "label": "Dos quintos (2/5)" },
        { "value": "tres-quintos", "label": "Tres quintos (3/5)" },
        { "value": "cuatro-quintos", "label": "Cuatro quintos (4/5)" }
      ],
      "default": "completo",
      "info": "Controla el ancho máximo de la sección. Siempre se centrará horizontalmente."
    },
    {
      "type": "select",
      "id": "alineacion_texto",
      "label": "Alineación del texto",
      "options": [
        { "value": "left", "label": "Izquierda" },
        { "value": "center", "label": "Centro" },
        { "value": "right", "label": "Derecha" }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "mostrar_borde",
      "label": "Mostrar borde superior",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Título",
      "category": "Decoraciones"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .contenedorTitulo {
    margin: 1.5rem auto 2rem auto;
    padding: 0 1rem;
  }

  .contenedorTitulo--completo {
    width: 100%;
  }
  .contenedorTitulo--mitad {
    width: 50%;
  }
  .contenedorTitulo--tercio {
    width: 33.33%;
  }
  .contenedorTitulo--dos-tercios {
    width: 66.66%;
  }
  .contenedorTitulo--cuarto {
    width: 25%;
  }
  .contenedorTitulo--tres-cuartos {
    width: 75%;
  }
  .contenedorTitulo--quinto {
    width: 20%;
  }
  .contenedorTitulo--dos-quintos {
    width: 40%;
  }
  .contenedorTitulo--tres-quintos {
    width: 60%;
  }
  .contenedorTitulo--cuatro-quintos {
    width: 80%;
  }

  .textoTitulo {
    width: 100%;
  }

  .textoTitulo--conBorde {
    border-top: 2px solid var(--color-foreground);
    padding-top: 1rem;
  }

  @media (max-width: 768px) {
    .contenedorTitulo {
      width: 100% !important;
    }
  }
{% endstylesheet %}
