{% assign video = section.settings.video_inicio.sources | where: 'format', 'mp4' | last %}

<div class='contenedorVideo full-width'>
  {%- comment -%}
    El video se sube a Shopify y ya tiene una URL, no usar {{ video.url | asset_url }}
  {%- endcomment -%}
  {% if video %}
    <video class='videoPantallaCompleta' loop autoplay muted playsinline>
      <source src='{{ video.url }}' type='video/mp4'>
    </video>
  {% else %}
    <p></p>
  {% endif %}

  <div class='textoVideo'>
    {{ section.settings.video_texto }}
    {% if section.settings.video_enlace_boton != blank %}
      <div class='enlaceVideo'>
        <a href='{{ section.settings.video_enlace_boton }}' class='videoBoton'>
          {{ section.settings.video_texto_boton | default: 'Ver m치s' }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Video",
  "settings": [
    {
      "type": "video",
      "id": "video_inicio",
      "label": "Archivo de video"
    },
    {
      "type": "richtext",
      "id": "video_texto",
      "label": "Texto sobre el video"
    },
    {
      "type": "text",
      "id": "video_texto_boton",
      "label": "Texto del bot칩n",
      "default": "Ver m치s"
    },
    {
      "type": "url",
      "id": "video_enlace_boton",
      "label": "Enlace del bot칩n"
    }
  ],
  "presets": [
    {
      "name": "Full width Video",
      "category": "Decoraciones"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .videoPantallaCompleta {
    width: 100%;
    height: 100%;
    min-height: 600px;
    object-fit: cover;
  }

  .contenedorVideo {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .textoVideo {
    position: absolute;
    top: 80px;
    right: 100px;
    width: 40vw;
    color: black;
    padding: 10px;
    font-size: 1.4em;
  }

  .textoVideo h1,
  .textoVideo h2,
  .textoVideo h3 {
    margin: 0;
    padding: 0;
    text-align: center;
  }

  .textoVideo p {
    margin-top: 1em;
    font-size: 0.9em;
  }

  .enlaceVideo {
    margin-top: 1em;
  }

  .videoBoton {
    display: inline-block;
    background: var(--color-foreground);
    color: var(--color-background);
    padding: 0.6rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
  }
{% endstylesheet %}
