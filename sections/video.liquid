{% assign video = section.settings.video_inicio.sources | where: 'format', 'mp4' | last %}

<div class='contenedorVideo full-width'>
  {% if video %}
    <video class='videoPantallaCompleta' loop autoplay muted playsinline>
      <source src='{{ video.url }}' type='video/mp4'>
    </video>
  {% else %}
    <p></p>
  {% endif %}

  <div class='textoVideo'>
    <p>{{ section.settings.video_texto }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Video",
  "settings": [
    {
      "type": "video",
      "id": "video_inicio",
      "label": "Archivo de video"
    },
    {
      "type": "richtext",
      "id": "video_texto",
      "label": "Texto sobre el video"
    }
  ],
  "presets": [
    {
      "name": "Full width Video",
      "category": "Decoraciones"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .videoPantallaCompleta {
    width: 100%;
    height: 100%;
    min-height: 600px;
    object-fit: cover;
  }

  .contenedorVideo {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .textoVideo {
    position: absolute;
    top: 80px;
    right: 100px;
    width: 40vw;
    color: black;
    padding: 10px;
    font-size: 1.4em;
  }

  .textoVideo h1,
  .textoVideo h2,
  .textoVideo h3 {
    margin: 0;
    padding: 0;
    text-align: center;
  }
{% endstylesheet %}
