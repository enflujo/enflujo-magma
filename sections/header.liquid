<header>
  <div class='encabezadoSocial'>
    <a href='https://www.instagram.com/mlarotta_metal/'>
      <img src='{{ 'icono-instagram.svg' | asset_url }}' alt='Instagram' width='20px' height='20px'>
    </a>
  </div>

  <h2 class='header__title'>
    {{ shop.name | link_to: routes.root_url }}
  </h2>

  <div class='header__menu'>
    {% for link in linklists['main-menu'].links %}
      <a href='{{ link.url }}'>{{ link.title }}</a>
    {% endfor %}
  </div>

  <div class='header__icons'>
    {% if shop.customer_accounts_enabled %}
      {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
    {% endif %}

    <a href='{{ routes.cart_url }}'>
      {% if cart.item_count > 0 %}
        <sup>{{ cart.item_count }}</sup>
      {% endif %}

      {{ 'icon-cart.svg' | inline_asset_content }}
    </a>
  </div>
</header>

{% stylesheet %}
  header {
    height: 5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    z-index: 999;
    width: 100vw;
    left: 0;
    padding: 0 100px;
  }

  header a {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
  }
  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
  }
  header svg {
    width: 2rem;
  }
  header .header__menu,
  header .header__icons {
    display: flex;
    gap: 1rem;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
