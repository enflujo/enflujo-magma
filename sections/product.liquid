    border-color: #000;
  }
  .imagenPrincipal {
    flex: 1 1 auto;
  }
  .imagenPrincipalBtn {
    background: transparent;
    border: 0;
    padding: 0;
    cursor: zoom-in;
    display: block;
    width: 100%;
  }
  .imagenPrincipalImg {
    width: 100%;
    height: auto;
    display: block;
  }

