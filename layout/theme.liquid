<!doctype html>
<html lang='{{ request.locale.iso_code }}'>
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    {{ 'estilos.css' | asset_url | stylesheet_tag: preload: true }}
    {% render 'estilos-ordenamiento' %}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}
    <main>
    {{ content_for_layout }}
    </main>

    <footer>{% sections 'footer-group' %}</footer>
    <script src='{{ 'magma.js' | asset_url }}' defer></script>
  </body>
</html>
